<resources>

    <!-- Base application theme. -->
    <style name="Theme.Pio" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/app_primary</item>
        <item name="colorPrimaryDark">@color/app_primary_dark</item>
        <item name="colorAccent">@color/app_accent</item>

        <!--<item name="android:windowActionBar">false</item>-->
        <item name="android:windowNoTitle">true</item>
        <!--<item name="windowActionModeOverlay">true</item>-->

        <item name="android:actionBarStyle">@style/Theme.Pio.ActionBar</item>
    </style>

    <style name="Theme.Pio.ActionBar">
        <item name="android:background">@color/app_primary</item>
    </style>

    <style name="ActionBarPopupThemeOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="MyDarkToolbarStyle" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">@color/app_primary</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
    </style>

    <style name="ActionBar.TitleText" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">#fff</item>
        <item name="android:textSize">24sp</item>
    </style>
</resources>
